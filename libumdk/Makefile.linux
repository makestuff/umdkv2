TARGET = libumdk.a

INCLUDES = \
	-I../../../include \
	-I../../../libs/usbwrap \
	-I../../neopurgo/libsync

CC_SRCS = $(shell ls *.c)
CC_OBJS = $(CC_SRCS:%.c=$(OBJDIR)/%.o)
CC = gcc
CFLAGS = -O3 -Wall -Wextra -Wstrict-prototypes -Wundef -std=c99 -pedantic-errors $(INCLUDES) -D_ISOC99_SOURCE
OBJDIR = .build
DEPDIR = .deps

all: $(TARGET) tests

$(TARGET): $(CC_OBJS)
	$(AR) cr $(TARGET) $(CC_OBJS)

$(OBJDIR)/%.o : %.c
	$(CC) -c $(CFLAGS) -MMD -MP -MF $(DEPDIR)/$(@F).d -Wa,-adhlns=$(OBJDIR)/$<.lst $< -o $@

-include Makefile.common

clean: FORCE
	make -C tests clean
	rm -rf $(OBJDIR) $(TARGET) $(DEPDIR) Debug Release *.ncb *.suo *.user

tests: FORCE
	make -C tests

-include $(shell mkdir -p $(OBJDIR) $(DEPDIR) 2>/dev/null) $(wildcard $(DEPDIR)/*)

FORCE:
